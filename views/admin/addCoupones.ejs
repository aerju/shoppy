                                                </form>

                                    </div>




                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </section>
    </main>

    <script>
        function generateCouponCode() {
            let code = '';
            const possibleChars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';

            for (let i = 0; i < 8; i++) {
                code += possibleChars.charAt(Math.floor(Math.random() * possibleChars.length));
            }

            document.getElementById('coupone').value = code

        }



    </script>