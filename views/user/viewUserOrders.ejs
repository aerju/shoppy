<%- include('../partials/UserHeader') %>

    <section>
        <div class="container mt-5">
            <h4 class="text-center mb-5">View All Orders</h4>
            <div class="container ">          
                    <% for(let i=0; i< orderDetails.length; i++) { %>
                        <a href="/view-order-products/<%=orderDetails[i]._id%>">
                            <div class="row justify-content-center">
                                <div class="col-md-12 ">
                                    
                                    
                                    <div class="card shadow-lg">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="table-responsive">
                                                    <table class="table">
                                                        <thead>
                                                            <tr>
                                                                <th width="20%">Name</th>
                                                                <th width="20%">Payment Method</th>
                                                                <th width="20%">Date</th>
                                                                <th width="20%">Total</th>
                                                                <th width="20%">Order Status</th>
                    
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                    
                                                            
                                                                <tr>
                                                                    <td>
                                                                        
                                                                          
                                                                            <div class="info">
                                                                                <%=orderDetails[i].deliveryDetails.name%>
                                                                            </div>
                                                                        
                                                                    </td>
                                                                    <td>
                                                                        <%=orderDetails[i].paymentMethod%>
                                                                    </td>
                                                                    <td>
                                                                        <%=orderDetails[i].date%>
                                                                    </td>
                                                                    <td>
                                                                        <%=orderDetails[i].total%>
                                                                    </td>
                                                                    
                                                                    <td style="color: green;">
                                                                        <%=orderDetails[i].orderStatus%>
                                                                    </td>
                    
                                                                </tr>
                                                              
                    
                                                        </tbody>
                                                    </table>
                    
                    
                                                </div> <!-- table-responsive// -->
                    
                    
                                            </div> <!-- col// -->
                                        </div>
                    
                    
                    
                                    </div>




                                    
                                </div>
                            </div>
                        </a>
                        <br>

                    <% } %>
              
            </div>
        </div>

    </section>

    <%- include('../partials/UserFooter') %>